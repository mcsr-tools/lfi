---
import names from "../assets/names.json";
import { twMerge } from "tailwind-merge";

interface Props {
  name: string;
  won: boolean;
}

const props = Astro.props;
---

<a
  href={`https://mcsrranked.com/stats/${props.name}`}
  target="_blank"
  class={twMerge("underline", props.won && "text-amber-400")}>{names[props.name as keyof typeof names]}</a
>
